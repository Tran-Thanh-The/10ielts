// Enum definitions
Enum StatusEnum {
  ACTIVE
  IN_ACTIVE
}

Enum AnswerTypesEnum {
  CHOICE
  INPUT
}

Enum LessonTypesEnum {
  VIDEO
  DOCS
  EXERCISE
}

Enum QuestionTypesEnum {
  CHOICE
  INPUT
}

Enum QuestionFileTypesEnum {
  AUDIO
  IMAGE
}


Enum AuthProvidersEnum {
  email
  facebook
  google
  twitter
  apple
}

Enum PracticeTypeEnum {
  READING
  LISTENING
  WRITING 
  SPEAKING
}

Enum DifficultyEnum {
  EASY
  MEDIUM 
  HARD
}

Table answer {
  id uuid [pk]
  content string
  file_id uuid
  answerType AnswerTypesEnum
  isCorrect boolean
  status StatusEnum
  question_id uuid
  createdAt timestamp
  updatedAt timestamp
  createdBy int
  updatedBy int
}

Table category {
  id uuid [pk]
  name string
  createdAt timestamp
  updatedAt timestamp
}

Table course_invoices {
  id uuid [pk]
  course_id uuid
  user_invoices_id uuid
  createdAt timestamp
  updatedAt timestamp
}

Table course {
  id uuid [pk]
  photo_id uuid
  category_id uuid
  name string
  price decimal
  description string
  status StatusEnum
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
}

Table invoice {
  id uuid [pk]
  name string
  description string
  money decimal
  status StatusEnum
  course_id uuid
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
}

Table lesson_course {
  id uuid [pk]
  status StatusEnum
  position int
  lesson_id uuid
  course_id uuid
  createdAt timestamp
  updatedAt timestamp
}

Table lesson {
  id uuid [pk]
  title string
  content string
  file_id uuid
  lessonType LessonTypesEnum
  stars decimal
  totalStars int
  status StatusEnum
  isSequence boolean
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
}

Table practice_exercise {
  id uuid [pk]
  user_id number
  title string
  description string
  price decimal
  content string // Nội dung bài luyện tập
  practiceType PracticeTypeEnum
  difficulty DifficultyEnum
  status StatusEnum
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
  createdBy int
  updatedBy int
}

Table answer_history {
    id uuid [pk]
    user_id int [ref: > user.id]
    practice_id uuid [ref: > practice_exercise.id, null]  // Null nếu làm bài trong lesson
    lesson_id uuid [ref: > lesson.id, null]  // Null nếu làm practice
    total_score decimal
    status StatusEnum // COMPLETED, IN_PROGRESS
    startedAt timestamp  
    completedAt timestamp
    createdAt timestamp
    updatedAt timestamp
}

Table question {
    id uuid [pk]
    title string
    content string
    position int
    file_id uuid 
    questionType QuestionTypesEnum
    fileType QuestionFileTypesEnum
    status StatusEnum
    category_id uuid
    time number
    explain string
    lesson_id uuid [null]  // Null nếu thuộc practice
    practice_id uuid [null]  // Null nếu thuộc lesson
    createdAt timestamp
    updatedAt timestamp
    createdBy int
    updatedBy int
}

Table user_answers {
    id uuid [pk]
    answer_history_id uuid [ref: > answer_history.id] // Thêm trường này
    question_id uuid [ref: > question.id]
    answerPick string //Câu trả lời cuả user
    status StatusEnum
    createdAt timestamp
    updatedAt timestamp
}

