Table role {
  id int [pk]
  name string
}

Table session {
  id int [pk]
  hash string
  user_id int
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
}

Table user_course {
  id uuid [pk]
  status StatusEnum
  user_id int
  course_id uuid
  current_lesson uuid 
  lastPositon int
  createdAt timestamp
  updatedAt timestamp
}

Table user_invoices {
  id uuid [pk]
  user_id int
  invoice_id uuid
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
}

Table user_lesson {
  id uuid [pk]
  status StatusEnum
  user_id int
  lesson_id uuid (nullable)
  isCompleted boolean
  createdAt timestamp
  updatedAt timestamp
}



Table file {
  id uuid [pk]
  path string
}

Table user {
  id int [pk]
  email string
  password string
  provider AuthProvidersEnum
  socialId string
  photo_id uuid
  role_id int
  fullName string
  dob date
  status StatusEnum
  createdAt timestamp
  updatedAt timestamp
  deletedAt timestamp
  createdBy int (null)
  updatedBy int (null)
  deletedBy int (null)
}

// Relationships
Ref: answer.question_id > question.id
Ref: course_invoices.course_id > course.id
Ref: course_invoices.user_invoices_id > user_invoices.id
Ref: course.photo_id > file.id
Ref: course.category_id > category.id
Ref: lesson_course.lesson_id > lesson.id
Ref: lesson_course.course_id > course.id
Ref: question.category_id > category.id
Ref: session.user_id > user.id
Ref: user_course.user_id > user.id
Ref: user_course.course_id > course.id
Ref: user_invoices.user_id > user.id
Ref: user_invoices.invoice_id > invoice.id
Ref: user_lesson.user_id > user.id
Ref: user_lesson.lesson_id > lesson.id

Ref: user.photo_id > file.id
Ref: user.role_id > role.id
Ref: lesson.file_id > file.id
Ref: question.file_id > file.id
Ref: practice_exercise.user_id > user.id
Ref: question.lesson_id > lesson.id
Ref: question.practice_id > practice_exercise.id

Ref: "answer_history"."status" < "answer_history"."startedAt"
